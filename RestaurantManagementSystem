import java.awt.*;  
import javax.swing.*;  
import java.awt.event.*;  

class RestaurantManagementSystem extends JFrame implements ActionListener {
    // Declare components for the menu interface
    private JLabel title;
    private JButton orderButton, viewMenuButton, exitButton;

    // Updated menu items with detailed pricing for each sub-item, grouped by category
    private String[] items = {
        "Chicken Biriyani - ₹150", 
        "Mutton Biriyani - ₹220", 
        "Paneer Tikka Makhni - ₹185", 
        "Veg Fried Rice - ₹95", 
        "Cheese Burger - ₹110", 
        "Fruit Salad - ₹65", 
        "Nuggets (4 pc) - ₹40", 
        "Veg Sandwich - ₹50", 
        "French Fries - ₹60", 
        "Tea - ₹25", 
        "Coffee - ₹25", 
        "Pepsi  - 45", 
        "Strawberry Milkshake - ₹55"
    };

    private int[] prices = {
        150, 220, 185, 95, 110, // Biriyani, Paneer, Veg Fried Rice, Cheese Burger prices
        65, 40, 50, 60,         // Fruit Salad, Nuggets, Sandwich, Fries prices
        25, 25, 45, 55          // Tea, Coffee, Orange Juice, Milkshake prices
    };

    public RestaurantManagementSystem() {
        // Create the title label
        title = new JLabel("Welcome to DELIGHT Restaurant", JLabel.CENTER);
        title.setFont(new Font("Serif", Font.BOLD, 36));  // Larger text for title
        title.setForeground(Color.WHITE);

        // Create buttons with larger text and background colors
        orderButton = new JButton("Place an Order");
        orderButton.setFont(new Font("Arial", Font.PLAIN, 24));
        orderButton.setBackground(Color.BLUE);  // Changed to blue background
        orderButton.setForeground(Color.WHITE);

        viewMenuButton = new JButton("View Menu");
viewMenuButton.setFont(new Font("Arial", Font.PLAIN, 24));
viewMenuButton.setBackground(new Color(128, 0, 128));  // Changed to purple background
viewMenuButton.setForeground(Color.WHITE);  // Use white text for better contrast);  


        exitButton = new JButton("Exit");
        exitButton.setFont(new Font("Arial", Font.PLAIN, 24));
        exitButton.setBackground(Color.RED);
        exitButton.setForeground(Color.WHITE);

        // Add action listeners for the buttons
        orderButton.addActionListener(this);
        viewMenuButton.addActionListener(this);
        exitButton.addActionListener(this);

        // Set the layout for the frame and add components
        setLayout(new FlowLayout());
        setBackground(Color.DARK_GRAY);
        add(title);
        add(orderButton);
        add(viewMenuButton);
        add(exitButton);

        // Frame settings
        setTitle("Restaurant Management System");
        setSize(600, 400);  // Larger size for better visibility
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setLocationRelativeTo(null); // Center the frame
        getContentPane().setBackground(Color.DARK_GRAY); // Set background color for the frame
        setVisible(true);
    }
    
    // Event handling for button clicks
    public void actionPerformed(ActionEvent e) {
        if (e.getSource() == orderButton) {
            placeOrder();
        } else if (e.getSource() == viewMenuButton) {
            displayMenu();
        } else if (e.getSource() == exitButton) {
            System.exit(0); // Exit the application
        }
    }

    // Method to display the restaurant menu with colorful sections
    public void displayMenu() {
        JPanel menuPanel = new JPanel();
        menuPanel.setLayout(new GridLayout(items.length + 3, 1)); // +3 for the section headers
        menuPanel.setBackground(Color.WHITE);  // Main panel background

        // Add colorful section headers and items
        JLabel mainDishSection = new JLabel("MAIN COURSE", JLabel.CENTER);
        mainDishSection.setFont(new Font("Arial", Font.BOLD, 26));
        mainDishSection.setForeground(Color.RED);
        menuPanel.add(mainDishSection);

        for (int i = 0; i < 5; i++) {  // Main dish items (Biriyani, Paneer, Fried Rice, Cheese Burger)
            JLabel itemLabel = new JLabel(items[i], JLabel.CENTER);
            itemLabel.setFont(new Font("Arial", Font.PLAIN, 22));
            itemLabel.setForeground(Color.RED);  // Set main dish section color to red
            menuPanel.add(itemLabel);
        }

        JLabel snacksSection = new JLabel("APPETIZERS", JLabel.CENTER);
        snacksSection.setFont(new Font("Arial", Font.BOLD, 26));
        snacksSection.setForeground(new Color(128, 0, 128));  // Violet color
        menuPanel.add(snacksSection);

        for (int i = 5; i < 9; i++) {  // Snacks items
            JLabel itemLabel = new JLabel(items[i], JLabel.CENTER);
            itemLabel.setFont(new Font("Arial", Font.PLAIN, 22));
            itemLabel.setForeground(new Color(128, 0, 128));  // Set snacks section color to violet
            menuPanel.add(itemLabel);
        }

        JLabel drinksSection = new JLabel("BEVERAGES", JLabel.CENTER);
        drinksSection.setFont(new Font("Arial", Font.BOLD, 26));
        drinksSection.setForeground(Color.BLUE);
        menuPanel.add(drinksSection);

        for (int i = 9; i < items.length; i++) {  // Beverages items
            JLabel itemLabel = new JLabel(items[i], JLabel.CENTER);
            itemLabel.setFont(new Font("Arial", Font.PLAIN, 22));
            itemLabel.setForeground(Color.BLUE);  // Set beverages section color to blue
            menuPanel.add(itemLabel);
        }

        // Display the colorful menu
        JScrollPane scrollPane = new JScrollPane(menuPanel);
        scrollPane.setBackground(Color.LIGHT_GRAY);
        JOptionPane.showMessageDialog(this, scrollPane, "Restaurant Menu", JOptionPane.PLAIN_MESSAGE);
    }

    // Method to handle placing an order
    public void placeOrder() {
        int total = 0;
        StringBuilder orderSummary = new StringBuilder("Your Order:\n");

        // Display checkboxes for each menu item
        JCheckBox[] checkboxes = new JCheckBox[items.length];
        JPanel panel = new JPanel();
        panel.setLayout(new GridLayout(items.length, 1));
        panel.setBackground(Color.LIGHT_GRAY);  // Set background color for order panel

        for (int i = 0; i < items.length; i++) {
            checkboxes[i] = new JCheckBox(items[i]);
            checkboxes[i].setFont(new Font("Arial", Font.PLAIN, 24));  // Larger text for checkboxes
            checkboxes[i].setBackground(Color.LIGHT_GRAY);
            checkboxes[i].setForeground(Color.BLACK);
            panel.add(checkboxes[i]);
        }

        // Show the panel in a dialog
        int result = JOptionPane.showConfirmDialog(this, panel, "Select Items to Order", JOptionPane.OK_CANCEL_OPTION);

        if (result == JOptionPane.OK_OPTION) {
            // Calculate total cost and prepare order summary
            for (int i = 0; i < items.length; i++) {
                if (checkboxes[i].isSelected()) {
                    orderSummary.append(items[i]).append("\n");
                    total += prices[i];
                }
            }

            // Include the total in the order summary
            orderSummary.append("\nTotal: ₹").append(total);

            // Create a JTextArea for the order summary with larger font
            JTextArea textArea = new JTextArea(orderSummary.toString());
            textArea.setFont(new Font("Arial", Font.PLAIN, 28));  // Larger font for order summary
            textArea.setEditable(false); // Make the text area non-editable
            textArea.setLineWrap(true);
            textArea.setWrapStyleWord(true);
            textArea.setBackground(Color.LIGHT_GRAY);

            // Set preferred size for the JTextArea to make it wider
            textArea.setPreferredSize(new Dimension(400, 200));  // Width and height

            // Show the order summary in a dialog
            JOptionPane.showMessageDialog(this, new JScrollPane(textArea), "Order Summary", JOptionPane.INFORMATION_MESSAGE);

            // Thank you statement with larger font and wider area
            JTextArea thankYouArea = new JTextArea("Thank you! Visit again.");
            thankYouArea.setFont(new Font("Arial", Font.BOLD, 32));  // Larger font for thank you message
            thankYouArea.setEditable(false);
            thankYouArea.setBackground(Color.LIGHT_GRAY);
            thankYouArea.setPreferredSize(new Dimension(500, 100));  // Wider area for thank you message

            // Show the thank you message in a dialog
            JOptionPane.showMessageDialog(this, new JScrollPane(thankYouArea), "Thank You!", JOptionPane.INFORMATION_MESSAGE);
        }
    }

    public static void main(String[] args) {
        new RestaurantManagementSystem(); // Start the application
    }
}
